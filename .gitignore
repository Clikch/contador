public class Segundero implements Runnable {
    @Override
    public void run() {
        int segundos = 0;

        try {
            while (true) {
                
                segundos++;

                
                System.out.println("Segundos transcurridos: " + segundos);

                
                Thread.sleep(1000); 
            }
        } catch (InterruptedException e) {
            
            System.out.println("Segundero interrumpido, terminando ejecuci√≥n.");
        }
    }
}
